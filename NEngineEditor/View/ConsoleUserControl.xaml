<UserControl x:Class="NEngineEditor.View.ConsoleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NEngineEditor.View"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="800">
    <Grid>
        <ListView Name="logListView" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Log Level" Width="100" DisplayMemberBinding="{Binding LogLevel}" />
                    <GridViewColumn Header="Log Message" Width="400" DisplayMemberBinding="{Binding Message}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
